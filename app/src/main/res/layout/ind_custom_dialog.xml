<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:src="@drawable/login_background"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@+id/activation_layout"
        android:layout_alignBottom="@id/activation_layout"
        android:layout_alignLeft="@id/activation_layout"
        android:layout_alignRight="@id/activation_layout" />
    <RelativeLayout
        android:id="@+id/activation_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<TextView
    android:layout_margin="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/indecation_text"
    />
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/indecation_text"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/ok"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/ok_btn"
                />

        </LinearLayout>
</RelativeLayout>
    </RelativeLayout>