<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:fillViewport="true"
    tools:context="com.businessmonk.pharmameter.Signup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/complete_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Complete your profile "
                android:textSize="20dp" />
            >
        </LinearLayout>

        <View
            android:id="@+id/sep"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/header"
            android:layout_marginTop="5dp"
            android:background="#000" />


        <EditText
            android:layout_marginTop="50dp"
            android:textColorHint="@color/logoColor"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:singleLine="true"
            android:id="@+id/username_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sep"
            android:ems="10"
            android:hint="Enter your username" />

        <EditText
            android:singleLine="true"
            android:layout_marginTop="10dp"

            android:layout_marginRight="50dp"
            android:textColorHint="@color/logoColor"
            android:id="@+id/fullName_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/username_edit"
            android:layout_below="@+id/username_edit"
            android:ems="10"
            android:hint="Enter your full name" />

        <EditText
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:textColorHint="@color/logoColor"
            android:id="@+id/password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/username_edit"
            android:layout_below="@+id/fullName_edit"
            android:ems="10"
            android:hint="Enter your password" />

        <EditText
            android:layout_marginRight="50dp"

            android:singleLine="true"
            android:inputType="textPassword"
            android:textColorHint="@color/logoColor"
            android:id="@+id/passwordConfirm_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/password_edit"
            android:layout_alignStart="@+id/password_edit"
            android:layout_below="@+id/password_edit"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Enter password again" />


        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:textColorHint="@color/logoColor"
            android:fontFamily=""
            android:id="@+id/birthDate_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/username_edit"
            android:layout_below="@+id/passwordConfirm_edit"
            android:ems="10"
            android:singleLine="true"
            android:hint="Enter your birthDate" />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/Gender"
            android:textColor="@color/logoColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/birthDate_edit"
            android:layout_marginRight="30dp"
            android:layout_alignBottom="@+id/Gender_group"
            android:text="Gender" />

        <RadioGroup
            android:layout_marginTop="10dp"
            android:id="@+id/Gender_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/birthDate_edit"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:orientation="horizontal">

            <RadioButton
                android:textColor="@color/logoColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male" />

            <RadioButton
                android:textColor="@color/logoColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female" />
        </RadioGroup>

        <CheckBox
            android:layout_marginTop="10dp"
            android:textColor="@color/logoColor"
            android:id="@+id/pregnant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/passwordConfirm_edit"
            android:layout_alignStart="@+id/passwordConfirm_edit"
            android:layout_below="@+id/Gender_group"
            android:text="Pregnant" />

        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/pregnant"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/pregnant"
            android:text="started from" />

        <EditText
            android:layout_marginRight="50dp"
            android:id="@+id/pregnant_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/start"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/start"
            android:singleLine="true"

            android:ems="3" />

        <TextView
            android:textColor="@color/logoColor"

            android:layout_marginLeft="50dp"
            android:id="@+id/Children"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pregnant"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="Children" />
        <CheckBox
            android:textColor="@color/logoColor"
            android:id="@+id/don"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/Children"
            android:layout_below="@+id/pregnant_date"
            android:layout_toRightOf="@+id/Children"
            android:ems="10"
            android:text="Don't have" />
        <EditText
            android:layout_marginRight="50dp"
            android:singleLine="true"
            android:textColorHint="@color/logoColor"
            android:id="@+id/children_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/don"
            android:layout_below="@+id/don"
            android:hint="@string/type_number_of_them" />

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/children_num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/confirm_button"
            android:textColor="#000" />
    </RelativeLayout>
</ScrollView>
