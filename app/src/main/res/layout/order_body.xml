<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/login_background"
    android:paddingTop="50dp"
    tools:context="com.businessmonk.pharmameter.Order"
    android:weightSum="1"
    tools:showIn="@layout/activity_order"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/products_list"
        android:layout_weight=".8"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/centerShim"
            >
        <ImageView
            android:id="@+id/tot_cost_icon"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:src="@drawable/cost"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:weightSum="1"
            android:layout_weight=".5"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                >
        <TextView
            android:id="@+id/tot_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="59"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/logoColor"
            android:layout_toLeftOf="@+id/LE"
            />

            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".5"
                >
            <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Order"
            />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    <ListView
            android:id="@+id/ordered"
            android:layout_toRightOf="@+id/centerShim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/upperShim"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#000"
            android:layout_alignParentTop="true"/>
        <View
            android:id="@+id/centerShim"
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:background="#000"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</LinearLayout>